---
import "../styles/global.css";

// Récupère la langue et l'utilisateur depuis le middleware
const userLang = Astro.locals.lang || "en";
const user = Astro.locals.user;
---

<!doctype html>
<html lang={userLang} data-theme="monTheme" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body class="h-full">
    <div class="h-full flex flex-col min-h-0">

      <!-- Header -->
      <header class="p-4 border-b flex justify-between items-center">
        <!-- Section gauche : langue + gallery si connecté -->
        <div class="flex items-center gap-2">
          <!-- Sélecteur de langue -->
          <form method="POST" class="flex items-center">
            <select 
              name="language" 
              class="select mr-2" 
              onchange="this.form.submit()"
            >
              <option value="en" {...(userLang === "en" ? { selected: true } : {})}>English</option>
              <option value="fr" {...(userLang === "fr" ? { selected: true } : {})}>Français</option>
            </select>
          </form>

          <!-- Bouton Gallery si connecté -->
          {user && <a href="/gallery" class="btn btn-primary">Gallery</a>}
        </div>

        <!-- Section droite : Login / Sign Up / Logout -->
        <div class="flex items-center gap-2">
          {user ? (
            <form method="POST" action="/api/logout" class="m-0 p-0">
              <button type="submit" class="btn btn-primary">Logout</button>
            </form>
          ) : (
            <>
              <a href="/login" class="btn btn-primary">Login</a>
              <a href="/signup" class="btn btn-primary">Sign Up</a>
            </>
          )}
        </div>
      </header>

      <!-- Contenu principal -->
      <div class="flex-1 min-h-0">
        <slot />
      </div>
    </div>
  </body>
</html>
