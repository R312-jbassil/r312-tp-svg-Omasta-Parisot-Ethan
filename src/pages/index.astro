---
import Layout from "../layouts/Layout.astro";
import { ui } from "../i18n/ui";

const locale = (Astro.locals as any).lang || 'en';
const texts = ui[locale as 'en' | 'fr'];
---

<Layout title={texts.index.title}>
  <div class="flex flex-col h-full items-center justify-center glass bg-primary">
    <h1 class="text-4xl font-bold mb-4 text-primary-content">{texts.index.title}</h1>
    <p class="mb-6 text-lg text-primary-content">{texts.index.description}</p>
    <a href="/generator" class="btn btn-secondary">{texts.index.button}</a>
  </div>
</Layout>
